public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Type your message:");//for typing input

        String msg = scanner.nextLine();// read what you type

       if (msg.contains("secret") || msg.contains("top") || msg.contains("password")){
            System.out.println("Alert: your message has secret words in it ");
        } else {
            System.out.println("message is safe no secret words are found in it");
        }
    }
}


